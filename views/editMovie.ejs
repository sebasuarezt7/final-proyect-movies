<%- include('partials/header') %>

<main>
  <h1>Edit Movie</h1>

  <form action="/edit/<%= movie._id %>" method="POST">
    <label>Name</label>
    <input type="text" name="name" value="<%= movie.name %>">

    <label>Description</label>
    <textarea name="description"><%= movie.description %></textarea>

    <label>Year</label>
    <input type="number" name="year" value="<%= movie.year %>">

    <label>Genres</label>
    <input type="text" name="genres" value="<%= movie.genres %>">

    <label>Rating</label>
    <input type="number" name="rating" value="<%= movie.rating %>">

    <button class="btn btn-primary">Update</button>
  </form>
</main>

<%- include('partials/footer') %>